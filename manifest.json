{
  "manifest_version": 2,
  "name": "Hidden Click",
  "version": "1.0",

  "description": "Loads pages on hover",

  "icons": {
    "48": "icons/icon.png"
  },

  "background":{
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "browser_action/browser_action.html"
  },

  "web_accessible_resources": [
    "Hidden Click.js"
  ],

  "permissions": ["tabs",
									"webRequest",
									"<all_urls>",
									"activeTab",
									"alarms",
									"bookmarks",
									"contextMenus",
									"cookies",
									"downloads",
									"downloads.open",
									"history",
									"idle",
									"management",
									"nativeMessaging",
									"notifications",
									"storage",
									"tabs",
									"webNavigation",
									"webRequest",
									"webRequestBlocking"]
}
